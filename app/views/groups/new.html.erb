<div class="sm:col-start-3 sm:col-span-8 flex flex-col items-center justify-center">

  <%= turbo_frame_tag "new_group", class: "w-full" do %>
    <h1 class="text-baseColor absolute text-3xl z-10 top-1/4 left-36">Please create your group</h1>
    <%= image_tag 'svg/Gift-1.svg', class: "absolute top-28 left-1/2 w-24" %>
    <%= image_tag 'svg/Gift-1-1.svg', class: "absolute top-3/4 left-2/3 w-24" %>
    <%= image_tag 'svg/Gift-1-2.svg', class: "absolute top-1/3 left-20 w-32" %>
    <%= image_tag 'svg/Gift-1-3.svg', class: "absolute top-2/3 left-28 w-24" %>
    <%= image_tag 'svg/Group.svg', class: "absolute top-2/2 right-16" %>
    <%= form_with model: @group, class: "flex flex-col justify-center items-center gap-2" do |f| %>
      <%= f.text_field :group_name, placeholder: "Group name", class: "w-full rounded-lg drop-shadow-lg border-none focus:outline-none focus:ring focus:ring-baseColor" %>
      <%= f.text_area :description, placeholder: "Description", class: "w-full rounded-lg drop-shadow-lg border-none focus:outline-none focus:ring focus:ring-baseColor" %>
      <%= f.submit "Create group", class: "bg-baseColor w-full text-white p-3.5 rounded-lg z-10" %>
    <% end %>
  <% end %>
</div>